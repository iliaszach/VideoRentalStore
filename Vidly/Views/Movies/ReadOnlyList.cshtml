@model IEnumerable<Vidly.Models.Movie>
@using Vidly.Support

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Date Added</th>            
            <th>Release Year</th>
            <th>Number in Stock</th>
            
        </tr>
    </thead>
    <tbody>       

    </tbody>
</table>

@section scripts{

<script>

    $(document).ready(function () {



        var table = $("#movies").DataTable({
            ajax: {
                url: "/api/movies",
                dataSrc: ""
            },
            columns: [
                {
                    data: "name",                    
                },
                {
                    data: "genre.name"
                },
                {
                    data: "dateAdded"
                },
                {
                    data: "releaseDate"
                },
                {
                    data: "numberInStock"
                }
            ]
        });  
    });




</script>

}